<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bikeRideViewModel"
            type="com.example.bikeride.viewModel.MainViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            style="@style/MainToolbar"/>
        <com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.activity.MainActivity">
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ride_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.bikeride.view.activity.ItemFragment"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/start_ride_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/baseline_pedal_bike_white_48"
                android:layout_margin="16dp"
                app:fabCustomSize="80dp"/>
        </com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>
    </LinearLayout>
</layout>